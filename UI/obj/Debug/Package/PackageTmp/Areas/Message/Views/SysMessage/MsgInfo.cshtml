@{
    Layout = null;
}
@{
    MODEL.T_MemberInformation user = Session["ainfo"] as MODEL.T_MemberInformation;
    MODEL.SystemMessage info = ViewData["msgInfo"] as MODEL.SystemMessage;
    string pageId = ViewData["pageId"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MessageHome</title>
    <link href="~/Areas/Message/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/Message/js/bootstrap.min.js"></script>
    <script src="~/Areas/Message/js/jquery-1.11.3.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#return").click(function () {
                location.href = "/Message/SysMessage/Index";
            });
        });
    </script>
    <style>
        body {
            background: #EDF1F9;
            font-family: "微软雅黑"；;
        }

        label {
        }

        .back {
            /*float: right;*/
            width: 100%;
            height: 50px;
            background: #9BDBF0;
            /*border: 1px solid red;*/
        }

            .back span {
                float: right;
                margin: 18px 5% auto;
                font-size: medium;
            }

        .infos {
            margin: 2% auto;
            padding: 1% 1% 0 1%;
            border: 1px solid #DDDDDD;
            width: 98%;
            /*float: left;*/
        }
    </style>
</head>
<body>
    <div class="container-fluid ">
        <div class=" main">

            <div class="infos">
                <div class="back">
                    <span>@Html.ActionLink("返回", "", "", new { id = "return" })</span>
                </div>
                <label style="float:left;">
                    主题：
                </label>
                <label>@info.Title</label>
                <label style="float:left;">
                    发送时间：
                </label>
                <label id="sendTime">@info.SendTime</label>
                <label style="float:left;">
                    正文：
                </label>
                <textarea name="content" id="content" placeholder="回复内容" style="width:98%;" rows="12" readonly>@info.Content</textarea>
            </div>
        </div>
    </div>
</body>
</html>
