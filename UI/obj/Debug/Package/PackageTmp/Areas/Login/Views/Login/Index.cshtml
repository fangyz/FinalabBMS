@{
    Layout = null;
}
@model MODEL.ViewModel.LoginUser
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title></title>
    <link href="~/Areas/Login/CSS/Login.css" rel="stylesheet" />
    @*这里juqery要用jquery-1.3.1.js，否则不成功*@
    <script src="~/bootstrap/jquery/jquery-1.11.3.js"></script>
    <script src="~/Areas/Login/JS/Login.js"></script>
</head>
<body style="font-size: 14px; font-family: 'Microsoft YaHei'" onkeydown="keyLogin();">
    <!--背景图-->
    <div id="BackGroundDiv">
        <div id="TopDivShadow"></div>
        <div id="TopDiv">
            <div id="LogoImg"></div>
            <div id="title"><span style="font-size:18px">Final实验室</span></div>
        </div>



        <!-- 登录框-->
        <div id="LoginBoxShadow">
        </div>
            <div id="LoginBox">
                <!-- 用户名-->
                <div id="UserNameDiv">
                    <div><span>用户名:</span></div>
                    <div id="UserNameText">
                        <div id="UserNameImg"></div><input value="@ViewData["Name"]" id="LoginName" name="LoginName" type="text"/>

                    </div>
                </div>
                <!--密 码-->
                <div id="PasswordDiv">
                    <div><span>密&nbsp;&nbsp;码:</span></div>
                    <div id="PasswordText" style="margin-left:6px">
                        <div id="PasswordImg"></div><input id="Pwd" name="Pwd" type="password"  value="@ViewData["Pwd"]" /></div>
                </div>
                <!--验证码-->
                <div id="VCodeDiv">
                    <div><span>验证码:</span></div>
                    <div id="VCodeText">
                        <input type="text" id="VCode" name="VCode" /></div>
                    <div id="VCodeImg">
                        <img id="ValiCode" src="GetVcode" /></div>
                </div>
                <!--记住密码、自动登录-->
                <div id="CheckBoxDiv">
                    <div id="RememberPwd">
                        <input type="checkbox" id="remember"/><span style="font-size:12px;margin-top:5px">记住账号密码</span>
                    </div>
                    <div id="AutoLogin"> 
                        <a id="autologin" href="/Login/Login/ForgetPwd" style="text-decoration:none">忘记密码</a>
                    </div>
                </div>
                <div id="btnLogin">
                    <button onclick="login()" style="color: white" class="login-img  black" id="login_btn">登录</button>
                </div>
            </div>







        <!--背景切换-->
        <div id="BgSwitch">
            <div id="bgOne"></div>
            <div id="bgTwo"></div>
            <div id="bgThree"></div>
        </div>       
        <div id="BelowDiv">
            <a href="#">关于我们</a><a href="#">联系我们</a><a href="#">友情链接</a><a href="#">加入我们</a><br />
            <hr />
            <span>湖南|长沙理工理工大学|Final团队</span><br />
            <span>CopyRight@2000-2014</span>
        </div>

    </div>
</body>
</html>
