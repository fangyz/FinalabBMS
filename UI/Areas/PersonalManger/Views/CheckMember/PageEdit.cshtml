                    <div class="col-sm-10">
                        <input type="text" class="form-control" name="OtheInfor" placeholder="不超过100个字" value="@ViewBag.member.OtheInfor" maxlength="100">
                    </div>
                </div>

            </div>
        </div>







        <div class="panel panel-primary" style="width:900px;height:400px;margin:130px 0 auto;">
